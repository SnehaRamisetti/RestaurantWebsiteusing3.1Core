@page "{code:int?}"
@using RestaurantReservation.Core.Utils;
@model RestaurantReservation.Frontend.Pages.StatusCodeModel
@{
    ViewData["Title"] = "Not Found";
}

<div class="error-page">
    <h2 class="headline text-warning"><i class="fas fa-exclamation-triangle text-warning"></i></h2>

    <div class="error-content">
        <h3> Oops! Nothing found here.</h3>

        <br />

        <p>We could not find the resource you were looking for.</p>
        @if (User.IsInRole(SD.ROLE_ADMIN))
        {
            <p>Meanwhile, you may click here to <a asp-page="/Admins/Home">Home Page</a>.</p>
        }
        else
        {
            <p>Meanwhile, you may click here to <a asp-page="/Index">Home Page</a>.</p>
        }
    </div>
</div>

@section PageHeader {
    <div class="col-sm-6">
        <h1 class="m-0">Not Found</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            @if (User.IsInRole(SD.ROLE_ADMIN))
            {
                <li class="breadcrumb-item"><a asp-page="/Admins/Home">Home</a></li>
            }
            else
            {
                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            }
            <li class="breadcrumb-item active">Error</li>
        </ol>
    </div>
}

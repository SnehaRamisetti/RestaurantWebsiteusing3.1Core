@page "{ID:int}"
@using RestaurantReservation.Core.Utils;
@model RestaurantReservation.Frontend.Pages.Admins.Category.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Category Details</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>

                <div class="card-body">
                    <br />

                    <input hidden="hidden" asp-for="Category.CategoryID" />
                    <input hidden="hidden" asp-for="Category.VersionNo" />
                    <input hidden="hidden" asp-for="Category.CreatedBy" />
                    <input hidden="hidden" asp-for="Category.CreatedDate" />

                    <div class="form-group">
                        <label asp-for="Category.Name">Category Name</label><span class="text-danger"><b>*</b></span>
                        <input type="text" class="form-control" asp-for="Category.Name" required />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <br />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a class="btn btn-secondary" asp-page="/Admins/Category/List">Cancel</a>
            <input type="submit" value="Edit" class="btn btn-primary float-right" asp-page-handler="Submit" />
        </div>
    </div>
</form>
<br />
<br />

@section Scripts {
    @if (!String.IsNullOrEmpty(Model.ErrorMessage))
    {
        <script>
            $(document).ready(function() {
                var Toast = Swal.mixin({
                    toast: true,
                    position: "top-end",
                    showConfirmButton: false,
                    timer: 7000
                });

                Toast.fire({
                    icon: "error",
                    title: "@Model.ErrorMessage",
                })
            });
        </script>
    }
}

@section PageHeader {
    <div class="col-sm-6">
        <h1 class="m-0">Existing Category</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-page="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="/Admins/Category/List">Categories</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
}
@page "{ID:int}"
@model RestaurantReservation.Frontend.Pages.Admins.Category.DetailsModel
@{
    ViewData["Title"] = "Category Detail";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Category Details</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <br />

                <input hidden="hidden" asp-for="Category.CategoryID" />
                <input hidden="hidden" asp-for="Category.VersionNo" />
                <input hidden="hidden" asp-for="Category.CreatedBy" />
                <input hidden="hidden" asp-for="Category.CreatedDate" />

                <div class="form-group">
                    <label>Category ID</label>
                    <input type="text" class="form-control" asp-for="Category.CategoryID" disabled />
                </div>

                <div class="form-group">
                    <label>Category Name</label>
                    <input type="text" class="form-control" asp-for="Category.Name" disabled />
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Created By</label>
                            <input type="text" class="form-control" asp-for="Category.CreatedBy" disabled />
                        </div>

                        <div class="form-group">
                            <label>Created Date</label>
                            <input type="text" class="form-control" value="@Model.Category.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")" disabled />
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Edited By</label>
                            <input type="text" class="form-control" asp-for="Category.EditedBy" disabled />
                        </div>

                        <div class="form-group">
                            <label>Edited Date</label>
                            <input type="text" class="form-control" value="@Model.Category.EditedDate?.ToString("dd/MM/yyyy hh:mm tt")" disabled />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a class="btn btn-secondary" asp-page="/Admins/Category/List">Cancel</a>
        <a class="btn btn-primary float-right" asp-page="/Admins/Category/Edit" asp-route-ID="@Model.Category.CategoryID">
            Edit
        </a>
    </div>
</div>

@section PageHeader {
    <div class="col-sm-6">
        <h1 class="m-0">Category Detail</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-page="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="/Admins/Category/List">Categories</a></li>
            <li class="breadcrumb-item active">Detail</li>
        </ol>
    </div>
}
@page
@model RestaurantReservation.Frontend.Pages.Account.ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - T-Cube</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/theme/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/theme/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/theme/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <h1><b>T - Cube</b></h1>
            </div>

            <div class="card-body">
                <p class="login-box-msg">Forgot Password</p>

                <form method="post">
                    @if (TempData["FailedMessage"] != null)
                    {
                        <span class="text-danger">@TempData["FailedMessage"]</span>
                    }
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                    </div>

                    <br />

                    <div class="form-group text-center">
                        <p>
                            <a asp-page="Login">Already an existing user?</a> <br />
                            <a asp-page="Register" class=" text-center">No account yet? Register here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.card -->
    </div>

    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/dist/js/adminlte.min.js"></script>

    <!-- jQuery Validation -->
    <script src="~/theme/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/theme/plugins/jquery-validation/jquery.validate.unobtrusive.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="~/theme/plugins/sweetalert2/sweetalert2.min.js"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                var Toast = Swal.mixin({
                    toast: true,
                    position: "top-end",
                    showConfirmButton: false,
                    timer: 7000
                });

                Toast.fire({
                    icon: "success",
                    title: "@TempData["SuccessMessage"]",
                })
            });
        </script>
    }
</body>
